{
  "name": "yasapi-template",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.0",
  "description": "Fastify + TypeScript API template - escalÃ¡vel e modular",
  "main": "dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc && tsc-alias -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "eslint src prisma",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/helmet": "^11.1.0",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.10",
    "prisma": "^5.22.0",
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "typescript-eslint": "^8.15.0",
    "globals": "^15.12.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*.ts": ["eslint --fix", "prettier --write"],
    "prisma/**/*.ts": ["prettier --write"]
  }
}
